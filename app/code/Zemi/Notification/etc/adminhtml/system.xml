<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="zmvoucher" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Zemi Voucher Shop</label>
            <tab>zemi</tab>
            <resource>Zemi_Notification::voucher_config</resource>
            <group id="voucher" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Voucher</label>
                <field id="show" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Voucher</label>
                    <validate>required-entry</validate>
                </field>
                <field id="describe" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Describe</label>
                    <validate>required-entry</validate>
                </field>
            </group>
        </section>
    </system>
</config>
